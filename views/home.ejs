<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Research Paper Analyser</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              // CYAN
              text: "#081211",
              background: "#f7fdfc",
              primary: "#29d7cc",
              secondary: "#7df2eb",
              accent: "#41fbf0",
              // YELLOW
            //  'text': '#141310',
            //  'background': '#fdfcfb',
            //  'primary': '#d4aa2b',
            //  'secondary': '#f1d684',
            //  'accent': '#f7c93e',
              // GREEN
              //  'text': '#09110e',
              //  'background': '#f3fbf8',
              //  'primary': '#3fd49b',
              //  'secondary': '#76f0c1',
              //  'accent': '#47fbb6',
            },
          },
        },
      };
    </script>
  </head>

  <body class="bg-background text-text">
      <div id="loadFromURL" class="hidden absolute w-screen h-screen bg-primary ">
          <button class='p-4 text-white bg-red-600 hover:bg-red-500 active:bg-red-300' onclick="LoadModal()">X</button>
          <br>
          <br>
          <label for="url">Url to load:</label><input type="url" name="url" id="url" onkeypress="if(event.key == 'Enter')uploadURL()">
          <br>
          <br>
          <button onclick="uploadURL()" class="bg-secondary hover:bg-accent px-4 py-2 rounded-xl">Submit</button>
      </div>
    <div id="main" class="w-screen h-[90vh] flex">
      <div class="grow m-4">
        <button class="bg-slate-400 hover:bg-slate-300" onclick="LoadModal();">Load From URL</button>
      </div>
      <div class="w-[39vw]">
        <embed
          src=""
          class="w-[39vw] h-full border border-black"
          type="application/pdf"
        />
      </div>
    </div>
    <div class="flex w-screen justify-center h-[10vh] py-2 px-4 bg-primary">
      <input class="rounded-l-lg p-2 w-[95vw] bg-bg border-4 rounded-r-rlg border-accent focus-visible:outline-none" type="text" />
      <button class="rounded-r-lg bg-accent w-[5vw]">
        <span class="material-symbols-outlined"> send </span>
      </button>
    </div>
    <script>
        function LoadModal(){
            document.querySelector('#loadFromURL').classList.toggle('hidden');
        }
    </script>
    <script>
        const serverLinnk= '';
        function uploadURL(){
            let form = new FormData();
            form.append('url', document.querySelector('#url').value);
            fetch(serverLinnk + '/init_model', {
                method: "POST",
                body: form
            })
        }
    </script>
  </body>
</html>
