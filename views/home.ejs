<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Research Paper Analyser</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        // CYAN
                        text: "#081211",
                        background: "#f7fdfc",
                        primary: "#29d7cc",
                        secondary: "#7df2eb",
                        accent: "#41fbf0",
                        // YELLOW
                        //  'text': '#141310',
                        //  'background': '#fdfcfb',
                        //  'primary': '#d4aa2b',
                        //  'secondary': '#f1d684',
                        //  'accent': '#f7c93e',
                        // GREEN
                        //  'text': '#09110e',
                        //  'background': '#f3fbf8',
                        //  'primary': '#3fd49b',
                        //  'secondary': '#76f0c1',
                        //  'accent': '#47fbb6',
                    },
                },
            },
        };
    </script>
</head>

<body class="bg-background text-text">



    <!-- Main modal -->
    <div id="static-modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
        class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-2xl max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                    <h3 class="text-xl font-semibold text-gray-900">
                        Static modal
                    </h3>
                    <button type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
                        data-modal-hide="static-modal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div class="p-4 md:p-5 space-y-4">
                    <p class="text-base leading-relaxed text-gray-500">
                        Enter the url of the research paper you wanna use.
                    </p>
                    <label for="url" class="text-xl"><b>Url to load: </b> </label><input class="p-2" type="url"
                        name="url" id="url" onkeypress="if(event.key == 'Enter')uploadURL()">
                </div>
                <!-- Modal footer -->
                <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b">
                    <button data-modal-hide="static-modal" type="button" id="loadFromURLBtn"
                        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">I
                        Search</button>
                </div>
            </div>
        </div>
    </div>

    <div id="loadFromURL" class="hidden absolute top-0 left-0 w-screen h-screen"
        style="background: rgba(0, 0, 0, 0.75);">
        <div
            class="relative w-[50vw] h-[50vh] bg-primary top-[50vh] left-[50vw] -translate-y-1/2 -translate-x-1/2 rounded-lg p-4">
            <button class='p-4 text-white bg-red-600 hover:bg-red-500 active:bg-red-300 absolute right-0 top-0'
                onclick="LoadModal()">X</button>
            <br>
            <br>
            <label for="url" class="text-xl"><b>Url to load: </b> </label><input class="p-2" type="url" name="url"
                id="url" onkeypress="if(event.key == 'Enter')uploadURL()">
            <br>
            <br>
            <button onclick="uploadURL()" class="bg-secondary hover:bg-accent px-4 py-2 rounded-xl">Submit</button>
        </div>
    </div>
    <div id="main" class="w-screen h-[90vh] flex">
        <div class="grow m-4">
            <!-- Modal toggle -->
            <button data-modal-target="static-modal" data-modal-toggle="static-modal"
                class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center "
                type="button">
                Load From URL
            </button>
        </div>
        <div class="w-[39vw]">
            <embed src="" class="w-[39vw] h-full border border-black" type="application/pdf" />
        </div>
    </div>
    <div class="flex w-screen justify-center h-[10vh] py-2 px-4 bg-primary">
        <input class="rounded-l-lg p-2 w-[95vw] bg-bg border-4 rounded-r-rlg border-accent focus-visible:outline-none"
            type="text" />
        <button class="rounded-r-lg bg-accent w-[5vw]">
            <span class="material-symbols-outlined"> send </span>
        </button>
    </div>
    <script>
        function LoadModal() {
            document.querySelector('#loadFromURL').classList.toggle('hidden');
        }
        document.querySelector('#loadFromURLBtn').addEventListener('click', (e) => {
            uploadURL();
        })
        const serverLinnk = "https://herring-notable-physically.ngrok-free.app";
        function uploadURL() {
            let form = new FormData();
            form.append('url', document.querySelector('#url').value);
            fetch(serverLinnk + '/init_model', {
                method: "POST",
                body: form
            }).then((e) => e.text().then(e => { console.log(e); allowChats() })).catch((e) => { console.error(e) })
        }
        function allowChats(){
            cosnole.log('chatting')
        }
    </script>
</body>

</html>